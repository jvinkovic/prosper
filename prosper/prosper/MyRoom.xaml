<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prosper.MyRoom"
             NavigationPage.HasNavigationBar="false"
             BackgroundImage="roombackground.png">
    <ContentPage.Content>
        <Grid Padding="0" HorizontalOptions="FillAndExpand" VerticalOptions="Fill">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image Grid.Row="0" Grid.Column="0" Source="roombackground.png" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Grid.ColumnSpan="6" Grid.RowSpan="5" Aspect="Fill"/>
            <Label Grid.Row="0" Grid.Column="0" Text="MENU"/>
            <Label Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Text="TIMER" HorizontalOptions="Center"/>
            <StackLayout Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Orientation="Vertical" HorizontalOptions="End">
                <Label Text="Health Bar" HorizontalTextAlignment="End" HorizontalOptions="End"/>
                <ProgressBar Progress="0.8"/>
            </StackLayout>
            <Button Text="Random" Grid.Row="1" Grid.Column="5" HorizontalOptions="End" Clicked="OnRandomSelect"/>
            <Button Text="Shop" Grid.Row="2" Grid.Column="5" HorizontalOptions="End" Clicked="OnShopSelect"/>
            <StackLayout Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="6" Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="Earn $" WidthRequest="100" Clicked="OnEarnMoneySelect"/>
                <Button Text="Manage $" WidthRequest="100" Clicked="OnManageMoneySelect"/>
            </StackLayout>
            <BoxView x:Name="TutorialOverlay" BackgroundColor="Black" Opacity="0.2"
                     Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3"/>
            <StackLayout Orientation="Vertical" x:Name="TutorialPopup" BackgroundColor="White"
                         Grid.Row="2" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3">
                <Label Text="Tutorial"/>
                <Label Text="Would you like to play the tutorial"/>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Yes" FontSize="Medium"/>
                    <Button Text="No" FontSize="Medium"/>
                </StackLayout>
            </StackLayout>

        </Grid>
    </ContentPage.Content>
</ContentPage>